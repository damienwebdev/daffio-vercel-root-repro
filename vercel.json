{
  "version": 2,
  "public": true,
  "functions": {
    "api/serverless.js": {
      "includeFiles": "+(server|browser)",
      "runtime": "@vercel/node@1.8.5"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "api/serverless" },
    { "source": "/(.*)", "destination": "api/serverless" }
  ]
}